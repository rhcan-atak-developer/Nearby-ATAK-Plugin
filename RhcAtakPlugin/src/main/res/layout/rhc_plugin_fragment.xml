<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/plugin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding"
        android:text="@string/app_desc"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fontSizeHeading"
        app:layout_constraintBottom_toTopOf="@id/separator_instruction" />

    <View
        android:id="@+id/separatorTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/plugin_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator_instruction"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plugin_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
